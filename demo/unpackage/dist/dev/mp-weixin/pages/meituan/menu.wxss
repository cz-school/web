
.menu {
	width: 100%;
	height: 100%;
}
.menu_img {
	width: 100%;
	height: 400rpx;
	background-color: red;
}
.details {
	width: 100%;
	height: 260rpx;
	padding: 20rpx;
	background-color: white;
}
.details>view {
	margin: 10rpx 0rpx;
}
.deta_title {
	overflow: hidden;
}
.deta_title>view {
	float: left;
	margin-right: 10rpx;
	text-align: center;
}
.deta_title>.menu_commend {
	width: 70rpx;
	height: 40rpx;
	line-height: 40rpx;
	margin: 10rpx 0rpx;
	margin-right: 30rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.deta_title>.menu_name {
	font-size: 36rpx;
	font-weight: 900;
}

/* 菜品的介绍 */
.menu_describe {
	font-size: 20rpx;
	color: #9e9e9e;
	width: 100%;
	/* 超出一行文字自动隐藏 */
	overflow: hidden;
	/* 文字隐藏后添加省略号 */
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	/* //强制不换行 */
	white-space: nowrap;
}
.menu_price {
	width: 100%;
	height: 70rpx;
	font-size: 40rpx;
	line-height: 70rpx;
	overflow: hidden;
}
.menu_price>view {
	float: left;
	height: 100%;
	font-size: 40rpx;
	line-height: 70rpx;
}
.price {
	color: red;
}
.care {
	padding: 0rpx 20rpx;
	font-size: 30rpx !important;
	float: right !important;
	border-radius: 30rpx;
	background-color: orange;
}
.shopcare {
	margin-top: 540rpx;
}

