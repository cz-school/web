
uni-page-body {
	height: 100%;
}
page {
	width: 100%;
	height: 100%;
}
.regist {
	width: 100%;
	height: 100%;
	background: url(https://liuyifan.oss-cn-beijing.aliyuncs.com/school/login/zuce.jpg);
	background-size: cover;
}
.registForm {
	position: absolute;
	bottom: 10%;
	width: 100%;
}
.loginBox {
	display: block;
	width: 100%;
	height: auto;
	padding: 16rpx;
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
}
.inputBox {
	height: 80rpx;
	line-height: 80rpx;
}
.inputMargin {
	/* margin-bottom: 10rpx; */
}
.loginInput {
	display: inline-block;
	width: 90%;
	height: 80rpx;
	/* padding: 20rpx 0; */
	-webkit-box-sizing: border-box;
	        box-sizing: border-box;
	margin-left: 20rpx;
	font-size: 30rpx;
	placeholder-color: #CCCCCC;
}
.usernameInput {
	border-bottom: 1rpx solid #CCCCCC;
}
.inputImage {
	position: relative;
	top: -20rpx;
	width: 40rpx;
	height: 40rpx;
}
.submitBox {
	display: block;
	margin-top: 40rpx;
}
.submitBtn {
	background: #FFFFFF;
}
uni-button:after {
	border: none;
}
button::after {
	border: none;
}
.uni-card {
	border: none !important;
}

